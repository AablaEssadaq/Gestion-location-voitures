@using System.Data
@model DataRow

@{
    ViewData["Title"] = "Réserver " + Model["Marque"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Finaliser votre réservation</h4>
                </div>
                <div class="card-body">

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <div class="row mb-4">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model["ImageChemin"].ToString()))
                            {
                                <img src="@Model["ImageChemin"]" class="img-fluid rounded" alt="Voiture">
                            }
                        </div>
                        <div class="col-md-8">
                            <h5>@Model["Marque"] @Model["Modele"]</h5>
                            <p class="text-muted">@Model["Carburant"]</p>
                            <h4 class="text-primary fw-bold">@Model["PrixParJour"] DH <small class="fs-6 text-muted">/ jour</small></h4>
                        </div>
                    </div>

                    <hr />

                    <form asp-action="ConfirmBooking" method="post">
                        <input type="hidden" name="carId" value="@Model["Id"]" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Date de début</label>
                                <input type="date" name="dateDebut" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Date de fin</label>
                                <input type="date" name="dateFin" class="form-control" required />
                            </div>
                        </div>

                        <div class="alert alert-info mt-3">
                            <i class="bi bi-info-circle"></i> Le prix total sera calculé automatiquement lors de la validation.
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg">Confirmer la réservation</button>
                            <a asp-controller="Cars" asp-action="Details" asp-route-id="@Model["Id"]" class="btn btn-link mt-2">Annuler</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>