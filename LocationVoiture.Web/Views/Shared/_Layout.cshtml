@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Location Voiture</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">🚗 Location Voiture</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Cars" asp-action="Index">Nos Voitures</a>
                        </li>
                    </ul>

                    <!-- GESTION DE LA CONNEXION (DROITE) -->
                    <ul class="navbar-nav">
                        @{
                            // On regarde si une session existe
                            var clientNom = HttpContextAccessor.HttpContext.Session.GetString("ClientNom");
                        }

                        @if (!string.IsNullOrEmpty(clientNom))
                        {
                            // SI CONNECTÉ
                            <li class="nav-item">
                                <span class="nav-link text-success fw-bold">Bonjour, @clientNom</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Se déconnecter</a>
                            </li>
                        }
                        else
                        {
                            // SI PAS CONNECTÉ
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Se connecter</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-primary text-white" asp-controller="Account" asp-action="Register">S'inscrire</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-3">
        <div class="container text-center">
            &copy; 2025 - Location Voiture - Projet Étudiant
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>