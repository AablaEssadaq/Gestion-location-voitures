@model LocationVoiture.Data.Client

@{
    ViewData["Title"] = "Modifier mon profil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0 fw-bold">Modifier mes informations</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditProfile" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Nom</label>
                                <input asp-for="Nom" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Prénom</label>
                                <input asp-for="Prenom" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Téléphone</label>
                            <input asp-for="Telephone" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Numéro de Permis</label>
                            <input asp-for="NumPermis" class="form-control" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Mot de passe</label>
                            <input asp-for="MotDePasse" type="text" class="form-control" required />
                            <div class="form-text">Modifiez-le uniquement si nécessaire.</div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary text-white fw-bold">Enregistrer les modifications</button>
                            <a asp-action="Profile" class="btn btn-outline-secondary">Annuler</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>