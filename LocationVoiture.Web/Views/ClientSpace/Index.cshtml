@using System.Data
@model DataTable

@{
    ViewData["Title"] = "Mon Espace Client";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold"><i class="bi bi-calendar-check me-2"></i>Mes Réservations</h2>
        <a asp-controller="Cars" asp-action="Index" class="btn btn-outline-primary">Nouvelle réservation</a>
    </div>

    @if (Model.Rows.Count == 0)
    {
        <div class="alert alert-info text-center p-5 shadow-sm rounded">
            <h4>Vous n'avez aucune réservation pour le moment.</h4>
            <p>Explorez notre catalogue pour trouver votre prochaine voiture !</p>
            <a asp-controller="Cars" asp-action="Index" class="btn btn-primary mt-3">Voir le catalogue</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 g-4">
            @foreach (DataRow row in Model.Rows)
            {
                string statut = row["Statut"].ToString();
                string badgeColor = statut == "Confirmée" ? "success" : (statut == "Annulée" ? "danger" : "warning");
                string dateDebut = Convert.ToDateTime(row["DateDebut"]).ToString("dd/MM/yyyy");
                string dateFin = Convert.ToDateTime(row["DateFin"]).ToString("dd/MM/yyyy");

                <div class="col">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="row g-0">
                            <!-- Image Voiture -->
                            <div class="col-md-3 bg-light d-flex align-items-center justify-content-center">
                                @if (!string.IsNullOrEmpty(row["ImageChemin"].ToString()))
                                {
                                    <img src="@row["ImageChemin"]" class="img-fluid rounded-start" style="max-height: 150px; object-fit: contain;" alt="Voiture">
                                }
                                else
                                {
                                    <i class="bi bi-car-front text-muted fs-1"></i>
                                }
                            </div>

                            
                            <div class="col-md-9">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h5 class="card-title fw-bold text-dark mb-1">@row["Marque"] @row["Modele"]</h5>
                                            <p class="text-muted small mb-2">Réf. Location #@row["Id"]</p>
                                        </div>
                                        <span class="badge bg-@badgeColor fs-6 px-3 py-2">@statut</span>
                                    </div>

                                    <div class="row mt-3">
                                        <div class="col-md-6">
                                            <p class="mb-1"><i class="bi bi-calendar-event me-2 text-primary"></i> <strong>Du :</strong> @dateDebut</p>
                                            <p class="mb-1"><i class="bi bi-calendar-event-fill me-2 text-primary"></i> <strong>Au :</strong> @dateFin</p>
                                        </div>
                                        <div class="col-md-6 text-md-end mt-3 mt-md-0">
                                            <p class="mb-0 text-muted">Total à payer</p>
                                            <h4 class="text-primary fw-bold">@row["PrixTotal"] DH</h4>
                                        </div>
                                    </div>

                                    @if (statut == "Confirmée")
                                    {
                                        <div class="mt-3 border-top pt-2">
                                            <small class="text-success"><i class="bi bi-check-circle-fill me-1"></i> Votre véhicule est réservé. Présentez-vous à l'agence avec votre permis.</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>