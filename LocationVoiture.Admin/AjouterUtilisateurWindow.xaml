<Window x:Class="LocationVoiture.Admin.AjouterUtilisateurWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouvel Employé" Height="750" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F3F4F6">

    <Border Margin="20" Background="White" CornerRadius="10">
        <StackPanel Margin="20">
            <TextBlock Text="Créer un compte" FontSize="20" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <!-- Nom -->
            <TextBlock Text="Nom" FontWeight="SemiBold" Foreground="#4B5563" Margin="0,0,0,5"/>
            <TextBox x:Name="txtNom" Height="35" Padding="5" Margin="0,0,0,15"/>

            <!-- Prénom -->
            <TextBlock Text="Prénom" FontWeight="SemiBold" Foreground="#4B5563" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPrenom" Height="35" Padding="5" Margin="0,0,0,15"/>

            <!-- Email -->
            <TextBlock Text="Email" FontWeight="SemiBold" Foreground="#4B5563" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Height="35" Padding="5" Margin="0,0,0,15"/>

            <!-- Mot de passe -->
            <TextBlock Text="Mot de passe provisoire" FontWeight="SemiBold" Foreground="#4B5563" Margin="0,0,0,5"/>
            <TextBox x:Name="txtMdp" Height="35" Padding="5" Margin="0,0,0,15"/>

            <!-- Rôle -->
            <TextBlock Text="Rôle" FontWeight="SemiBold" Foreground="#4B5563" Margin="0,0,0,5"/>
            <ComboBox x:Name="cbRole" Height="35" Padding="5" Margin="0,0,0,25">
                <ComboBoxItem Content="Employe" IsSelected="True"/>
                <ComboBoxItem Content="Admin"/>
            </ComboBox>

            <!-- Boutons -->
            <Button Content="Enregistrer l'utilisateur" Click="BtnEnregistrer_Click"
                    Height="40" Background="#2563EB" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Border>
</Window>