<Window x:Class="LocationVoiture.Admin.GestionLocationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suivi des Locations" Height="600" Width="1100"
        WindowStartupLocation="CenterScreen" Background="#F3F4F6">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" Text="Réservations en cours" FontSize="24" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,20"/>

        <!-- Liste des Locations -->
        <DataGrid Grid.Row="1" x:Name="LocationsGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True"
                  Background="White" BorderBrush="#E5E7EB" BorderThickness="1" RowHeight="45">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#F9FAFB"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- Infos Client -->
                <DataGridTextColumn Header="Client" Binding="{Binding NomClient}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding EmailClient}" Width="1.5*"/>

                <!-- Infos Voiture -->
                <DataGridTextColumn Header="Véhicule" Binding="{Binding ModeleVoiture}" Width="*"/>

                <!-- Dates & Prix -->
                <DataGridTextColumn Header="Du" Binding="{Binding DateDebut, StringFormat=dd/MM/yyyy}" Width="90"/>
                <DataGridTextColumn Header="Au" Binding="{Binding DateFin, StringFormat=dd/MM/yyyy}" Width="90"/>
                <DataGridTextColumn Header="Total" Binding="{Binding PrixTotal, StringFormat={}{0} DH}" Width="80" FontWeight="Bold"/>

                <!-- Statut -->
                <DataGridTextColumn Header="Statut" Binding="{Binding Statut}" Width="100" FontWeight="Bold"/>

                <!-- Actions -->
                <DataGridTemplateColumn Header="Gestion" Width="300">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                                <!-- BOUTON VOIR RECU -->
                                <Button Content="📄 VOIR REÇU" Click="BtnVoirRecu_Click" 
                        Background="#3B82F6" Foreground="White" BorderThickness="0" FontWeight="Bold"
                        FontSize="11" Padding="8,4" Margin="0,0,5,0" Cursor="Hand" Tag="{Binding Id}"
                        ToolTip="Ouvrir le bon de réservation PDF"/>

                                <!-- Bouton Valider -->
                                <Button Content="✅ Valider" Click="BtnValider_Click" 
                        Background="#10B981" Foreground="White" BorderThickness="0" 
                        FontSize="11" Padding="8,4" Margin="0,0,5,0" Cursor="Hand" Tag="{Binding}"/>

                                <!-- Bouton Refuser -->
                                <Button Content="❌ Refuser" Click="BtnRefuser_Click" 
                        Background="#EF4444" Foreground="White" BorderThickness="0" 
                        FontSize="11" Padding="8,4" Cursor="Hand" Tag="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>