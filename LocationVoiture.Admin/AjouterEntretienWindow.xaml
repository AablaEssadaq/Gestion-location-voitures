<Window x:Class="LocationVoiture.Admin.AjouterEntretienWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouvel Entretien" Height="600" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F3F4F6">

    <Border Margin="20" Background="White" CornerRadius="10">
        <StackPanel Margin="20">
            <TextBlock Text="Enregistrer un Entretien" FontSize="20" FontWeight="Bold" Foreground="#1F2937" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Voiture -->
            <TextBlock Text="Véhicule concerné" FontWeight="SemiBold" Foreground="#4B5563"/>
            <ComboBox x:Name="cbVoiture" Height="35" Margin="0,0,0,15" DisplayMemberPath="NomComplet" SelectedValuePath="Id"/>

            <!-- Type -->
            <TextBlock Text="Type d'intervention" FontWeight="SemiBold" Foreground="#4B5563"/>
            <ComboBox x:Name="cbType" Height="35" Margin="0,0,0,15" IsEditable="True">
                <ComboBoxItem Content="Vidange + Filtres"/>
                <ComboBoxItem Content="Plaquettes de Frein"/>
                <ComboBoxItem Content="Courroie Distribution"/>
                <ComboBoxItem Content="Pneumatiques"/>
                <ComboBoxItem Content="Contrôle Technique"/>
                <ComboBoxItem Content="Réparation Panne"/>
            </ComboBox>

            <!-- KM au moment de l'entretien -->
            <TextBlock Text="Kilométrage actuel (au compteur)" FontWeight="SemiBold" Foreground="#4B5563"/>
            <TextBox x:Name="txtKm" Height="35" Padding="5" Margin="0,0,0,15"/>

            <!-- Coût -->
            <TextBlock Text="Coût Total (DH)" FontWeight="SemiBold" Foreground="#4B5563"/>
            <TextBox x:Name="txtCout" Height="35" Padding="5" Margin="0,0,0,15"/>

            <!-- Date -->
            <TextBlock Text="Date" FontWeight="SemiBold" Foreground="#4B5563"/>
            <DatePicker x:Name="dpDate" Height="35" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Annuler" Click="BtnAnnuler_Click" Width="100" Height="40" Margin="0,0,10,0" Background="Transparent" BorderBrush="#D1D5DB" BorderThickness="1"/>
                <Button Content="Valider" Click="BtnValider_Click" Width="120" Height="40" Background="#10B981" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>