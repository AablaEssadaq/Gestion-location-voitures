<Window x:Class="LocationVoiture.Admin.AjouterClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="700" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F3F4F6">

    <Border Margin="20" Background="White" CornerRadius="10">
        <StackPanel Margin="20">
            <TextBlock x:Name="lblTitre" Text="Nouveau Client" FontSize="20" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Nom" FontWeight="SemiBold" Foreground="#4B5563"/>
            <TextBox x:Name="txtNom" Height="30" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Prénom" FontWeight="SemiBold" Foreground="#4B5563"/>
            <TextBox x:Name="txtPrenom" Height="30" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Email" FontWeight="SemiBold" Foreground="#4B5563"/>
            <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Téléphone" FontWeight="SemiBold" Foreground="#4B5563"/>
            <TextBox x:Name="txtTel" Height="30" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Numéro Permis" FontWeight="SemiBold" Foreground="#4B5563"/>
            <TextBox x:Name="txtPermis" Height="30" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Mot de passe (Login)" FontWeight="SemiBold" Foreground="#4B5563"/>
            <TextBox x:Name="txtMdp" Height="30" Margin="0,0,0,20" Padding="5"/>

            <Button x:Name="btnSave" Content="Enregistrer" Click="BtnSave_Click"
                    Height="40" Background="#2563EB" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Border>
</Window>