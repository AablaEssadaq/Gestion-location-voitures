<Window x:Class="LocationVoiture.Admin.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tableau de Bord - Administration" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="TileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="15" BorderThickness="1" BorderBrush="#E0E4E8">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Opacity="0.08" ShadowDepth="2" Color="Black"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8FAFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="0,0,0,4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="160"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A8A" Offset="0"/>
                    <GradientStop Color="#2563EB" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="40,20,40,60">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <Ellipse Width="10" Height="10" Fill="#10B981" Margin="0,0,10,0"/>
                    <TextBlock Text="ESPACE ADMINISTRATION" FontSize="11" Foreground="#93C5FD" FontWeight="Bold"/>
                </StackPanel>

                <TextBlock Text="Tableau de Bord" FontSize="32" FontWeight="ExtraBold" Foreground="White" 
                           VerticalAlignment="Center" Margin="0,10,0,0"/>

                <Button HorizontalAlignment="Right" 
        VerticalAlignment="Center" 
        Click="BtnLogout_Click"
        Cursor="Hand"
        BorderThickness="0"
        Background="Transparent">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                    Background="#DC2626" 
                    CornerRadius="8" 
                    Padding="20,10" 
                    RenderTransformOrigin="0.5,0.5">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="🚪" 
                               FontSize="16" 
                               Margin="0,0,10,0" 
                               VerticalAlignment="Center" 
                               Foreground="White"/>

                                    <TextBlock Text="DÉCONNEXION" 
                               FontWeight="Bold" 
                               FontSize="13" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#EF4444"/>
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#991B1B"/>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="border" 
                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                 To="0.95" Duration="0:0:0.1"/>
                                                <DoubleAnimation Storyboard.TargetName="border" 
                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                 To="0.95" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="border" 
                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                 To="1" Duration="0:0:0.1"/>
                                                <DoubleAnimation Storyboard.TargetName="border" 
                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                 To="1" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="0" VerticalAlignment="Bottom" Margin="60,0,60,-40" Panel.ZIndex="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" BorderBrush="#F59E0B">
                <StackPanel>
                    <TextBlock Text="LOCATIONS EN ATTENTE" Foreground="#9CA3AF" FontSize="11" FontWeight="Bold"/>
                    <TextBlock x:Name="txtLocAttente" Text="-" FontSize="28" FontWeight="Bold" Foreground="#1F2937" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" BorderBrush="#10B981">
                <StackPanel>
                    <TextBlock Text="VÉHICULES DISPONIBLES" Foreground="#9CA3AF" FontSize="11" FontWeight="Bold"/>
                    <TextBlock x:Name="txtVehiculesDispo" Text="-" FontSize="28" FontWeight="Bold" Foreground="#1F2937" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="4" Style="{StaticResource StatCardStyle}" BorderBrush="#3B82F6">
                <StackPanel>
                    <TextBlock Text="CLIENTS TOTAL" Foreground="#9CA3AF" FontSize="11" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTotalClients" Text="-" FontSize="28" FontWeight="Bold" Foreground="#1F2937" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="40,60,40,20">
            <UniformGrid Columns="3">
                <Button Style="{StaticResource TileButtonStyle}" Click="BtnVoitures_Click">
                    <StackPanel>
                        <Border Width="60" Height="60" Background="#DBEAFE" CornerRadius="30" Margin="0,0,0,15">
                            <TextBlock Text="🚗" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Gestion Voitures" FontSize="18" FontWeight="Bold" Foreground="#1E293B" HorizontalAlignment="Center"/>
                        <TextBlock Text="Flotte et disponibilité" Foreground="#64748B" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource TileButtonStyle}" Click="BtnClients_Click">
                    <StackPanel>
                        <Border Width="60" Height="60" Background="#DCFCE7" CornerRadius="30" Margin="0,0,0,15">
                            <TextBlock Text="👥" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Gestion Clients" FontSize="18" FontWeight="Bold" Foreground="#1E293B" HorizontalAlignment="Center"/>
                        <TextBlock Text="Fichiers clients" Foreground="#64748B" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource TileButtonStyle}" Click="BtnLocations_Click">
                    <StackPanel>
                        <Border Width="60" Height="60" Background="#FEF3C7" CornerRadius="30" Margin="0,0,0,15">
                            <TextBlock Text="📑" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Suivi Locations" FontSize="18" FontWeight="Bold" Foreground="#1E293B" HorizontalAlignment="Center"/>
                        <TextBlock Text="Réservations actives" Foreground="#64748B" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource TileButtonStyle}" Click="BtnEntretiens_Click">
                    <StackPanel>
                        <Border Width="60" Height="60" Background="#FEE2E2" CornerRadius="30" Margin="0,0,0,15">
                            <TextBlock Text="🛠️" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Maintenance" FontSize="18" FontWeight="Bold" Foreground="#1E293B" HorizontalAlignment="Center"/>
                        <TextBlock Text="Alertes et historique" Foreground="#64748B" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource TileButtonStyle}" Click="BtnPaiements_Click">
                    <StackPanel>
                        <Border Width="60" Height="60" Background="#F3E8FF" CornerRadius="30" Margin="0,0,0,15">
                            <TextBlock Text="💰" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Comptabilité" FontSize="18" FontWeight="Bold" Foreground="#1E293B" HorizontalAlignment="Center"/>
                        <TextBlock Text="Journal de caisse" Foreground="#64748B" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnGestionEquipe" Style="{StaticResource TileButtonStyle}" Click="BtnEmployes_Click">
                    <StackPanel>
                        <Border Width="60" Height="60" Background="#F1F5F9" CornerRadius="30" Margin="0,0,0,15">
                            <TextBlock Text="🛡️" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Gestion Équipe" FontSize="18" FontWeight="Bold" Foreground="#1E293B" HorizontalAlignment="Center"/>
                        <TextBlock Text="Accès et permissions" Foreground="#64748B" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Window>