<Window x:Class="LocationVoiture.Admin.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tableau de Bord - Administration" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen" Background="#F8F9FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- En-tête -->
            <RowDefinition Height="Auto"/>
            <!-- Statistiques -->
            <RowDefinition Height="*"/>
            <!-- Tuiles -->
        </Grid.RowDefinitions>

        <!-- 1. BANDEAU SUPÉRIEUR -->
        <Border Grid.Row="0" Background="#1E3A8A" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🚗 Administration" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text=" | Tableau de Bord" FontSize="20" Foreground="#93C5FD" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <Button Grid.Column="2" Content="Déconnexion" Click="BtnLogout_Click"
                        Background="#EF4444" Foreground="White" BorderThickness="0" 
                        Padding="15,5" Cursor="Hand" FontWeight="Bold" VerticalAlignment="Center">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <!-- 2. CARTES STATISTIQUES -->
        <Grid Grid.Row="1" Margin="40,30,40,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Stat 1 -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Locations en attente" Foreground="#6B7280" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtLocAttente" Text="-" FontSize="32" FontWeight="Bold" Foreground="#F59E0B" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Stat 2 -->
            <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Véhicules Disponibles" Foreground="#6B7280" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtVehiculesDispo" Text="-" FontSize="32" FontWeight="Bold" Foreground="#10B981" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Stat 3 -->
            <Border Grid.Column="4" Background="White" CornerRadius="10" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Clients Inscrits" Foreground="#6B7280" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtTotalClients" Text="-" FontSize="32" FontWeight="Bold" Foreground="#3B82F6" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 3. GRILLE DES FONCTIONNALITÉS -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="40">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/>
                    <!-- Ligne 1 -->
                    <RowDefinition Height="180"/>
                    <!-- Ligne 2 -->
                </Grid.RowDefinitions>

                <!-- TUILE 1 : VOITURES (L1, C1) -->
                <Button Grid.Row="0" Grid.Column="0" Margin="10" Click="BtnVoitures_Click" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.1"/>
                                </Border.Effect>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="🚘" FontSize="45" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Gestion Voitures" FontSize="18" FontWeight="Bold" Foreground="#374151" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Flotte &amp; Disponibilité" Foreground="#9CA3AF" FontSize="12" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- TUILE 2 : CLIENTS (L1, C2) -->
                <Button Grid.Row="0" Grid.Column="1" Margin="10" Click="BtnClients_Click" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.1"/>
                                </Border.Effect>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="👤" FontSize="45" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Gestion Clients" FontSize="18" FontWeight="Bold" Foreground="#374151" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Fichiers clients" Foreground="#9CA3AF" FontSize="12" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- TUILE 3 : LOCATIONS (L1, C3) -->
                <Button Grid.Row="0" Grid.Column="2" Margin="10" Click="BtnLocations_Click" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.1"/>
                                </Border.Effect>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="📅" FontSize="45" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Suivi Locations" FontSize="18" FontWeight="Bold" Foreground="#374151" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Réservations &amp; Validation" Foreground="#9CA3AF" FontSize="12" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- TUILE 4 : ENTRETIENS (L2, C1) -->
                <Button Grid.Row="1" Grid.Column="0" Margin="10" Click="BtnEntretiens_Click" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.1"/>
                                </Border.Effect>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="🔧" FontSize="45" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Maintenance" FontSize="18" FontWeight="Bold" Foreground="#374151" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Alertes &amp; Historique" Foreground="#9CA3AF" FontSize="12" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- TUILE 5 : PAIEMENTS (L2, C2) -->
                <Button Grid.Row="1" Grid.Column="1" Margin="10" Click="BtnPaiements_Click" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.1"/>
                                </Border.Effect>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="💰" FontSize="45" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Comptabilité" FontSize="18" FontWeight="Bold" Foreground="#374151" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Journal de caisse" Foreground="#9CA3AF" FontSize="12" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- TUILE 6 : ÉQUIPE (L2, C3) -->
                <Button x:Name="btnGestionEquipe" Grid.Row="1" Grid.Column="2" Margin="10" Click="BtnEmployes_Click" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.1"/>
                                </Border.Effect>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="🛡️" FontSize="45" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Gestion Équipe" FontSize="18" FontWeight="Bold" Foreground="#374151" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Accès Admin/Employés" Foreground="#9CA3AF" FontSize="12" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </Grid>
        </ScrollViewer>
    </Grid>
</Window>