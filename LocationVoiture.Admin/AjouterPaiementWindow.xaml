<Window x:Class="LocationVoiture.Admin.AjouterPaiementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouveau Paiement" Height="600" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F3F4F6">

    <Border Margin="20" Background="White" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
        </Border.Effect>

        <StackPanel Margin="20">
            <TextBlock Text="Encaisser un Paiement" FontSize="20" FontWeight="Bold" Foreground="#1F2937" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock x:Name="lblInfo" Text="Location #..." Foreground="#6B7280" Margin="0,0,0,15" HorizontalAlignment="Center"/>

            <TextBlock Text="Montant (DH)" FontWeight="SemiBold" Foreground="#4B5563"/>
            <TextBox x:Name="txtMontant" Height="35" Padding="5" Margin="0,0,0,15" FontWeight="Bold"/>

            <TextBlock Text="Date du paiement" FontWeight="SemiBold" Foreground="#4B5563"/>
            <DatePicker x:Name="dpDate" Height="35" Margin="0,0,0,15"/>

            <TextBlock Text="Mode de règlement" FontWeight="SemiBold" Foreground="#4B5563"/>
            <ComboBox x:Name="cbMethode" Height="35" Padding="5" Margin="0,0,0,25">
                <ComboBoxItem Content="Espèce" IsSelected="True"/>
                <ComboBoxItem Content="Carte Bancaire"/>
                <ComboBoxItem Content="Virement"/>
                <ComboBoxItem Content="Chèque"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Annuler" Click="BtnAnnuler_Click" 
                        Background="Transparent" BorderBrush="#D1D5DB" BorderThickness="1" 
                        Width="100" Height="40" Margin="0,0,10,0" Cursor="Hand"/>

                <Button Content="Valider le paiement" Click="BtnValider_Click" 
                        Background="#10B981" Foreground="White" FontWeight="Bold" BorderThickness="0" 
                        Width="140" Height="40" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>