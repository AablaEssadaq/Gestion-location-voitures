<Window x:Class="LocationVoiture.Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion Location - Accueil" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen" Background="#F0F2F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- === BARRE D'OUTILS === -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">

            <!-- Bouton CLIENTS (NOUVEAU) -->
            <Button Content="👤 Gérer les Clients" Click="BtnClients_Click"
                    Height="40" Width="160" Margin="0,0,10,0"
                    Background="White" Foreground="#4B5563" FontWeight="Bold" BorderBrush="#E5E7EB" BorderThickness="1" Cursor="Hand"/>

            <!-- Bouton EMPLOYES -->
            <Button Content="🛡️ Gérer les Employés" Click="BtnUsers_Click"
                    Height="40" Width="170" Margin="0,0,10,0"
                    Background="White" Foreground="#4B5563" FontWeight="Bold" BorderBrush="#E5E7EB" BorderThickness="1" Cursor="Hand"/>

            <!-- Bouton VOITURES -->
            <Button Content="+ AJOUTER VOITURE" Click="BtnAjouter_Click"
                    Height="40" Width="180"
                    Background="#2563EB" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="📅 Gérer Locations" Click="BtnLocations_Click"
        Height="40" Width="160" Margin="0,0,10,0"
        Background="White" Foreground="#4B5563" FontWeight="Bold" BorderBrush="#E5E7EB" BorderThickness="1" Cursor="Hand"/>
        
        </StackPanel>

        <!-- === LISTE DES VOITURES === -->
        <DataGrid Grid.Row="1" x:Name="MyDataGrid" 
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  Background="White" BorderBrush="#E5E7EB" BorderThickness="1" RowHeight="40">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#F9FAFB"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Matricule" Binding="{Binding Matricule}" Width="100"/>
                <DataGridTextColumn Header="Marque" Binding="{Binding Marque}" Width="*"/>
                <DataGridTextColumn Header="Modèle" Binding="{Binding Modele}" Width="*"/>
                <DataGridTextColumn Header="Catégorie" Binding="{Binding Categorie}" Width="*"/>
                <DataGridTextColumn Header="Prix/J" Binding="{Binding PrixParJour, StringFormat={}{0} DH}" Width="80"/>
                <DataGridTextColumn Header="KM Actuel" Binding="{Binding KilometrageActuel, StringFormat={}{0} km}" Width="90"/>

                <DataGridCheckBoxColumn Header="Dispo." Binding="{Binding EstDisponible}" Width="50"/>

                <DataGridTemplateColumn Header="Actions" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Modifier" Click="BtnModifier_Click" 
                                        Background="#DBEAFE" Foreground="#1E40AF" BorderThickness="0" 
                                        FontSize="11" Padding="8,0" Margin="0,0,5,0" Cursor="Hand" Tag="{Binding Id}"/>
                                <Button Content="Supprimer" Click="BtnSupprimer_Click" 
                                        Background="#FEE2E2" Foreground="#DC2626" BorderThickness="0" 
                                        FontSize="11" Padding="8,0" Cursor="Hand" Tag="{Binding Id}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>