<Window x:Class="LocationVoiture.Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion du Parc Automobile" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#F0F2F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titre (0) -->
            <RowDefinition Height="Auto"/>
            <!-- Barre d'outils : Recherche/Filtre (1) -->
            <RowDefinition Height="*"/>
            <!-- Liste (2) -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination (3) -->
        </Grid.RowDefinitions>

        <!-- 1. EN-TÊTE -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="🚘 Liste des Véhicules" FontSize="24" FontWeight="Bold" Foreground="#1F2937"/>
                <TextBlock Text=" | Gestion de la flotte" FontSize="16" Foreground="#6B7280" VerticalAlignment="Bottom" Margin="10,0,0,3"/>
            </StackPanel>
            <Button HorizontalAlignment="Right" Content="+ NOUVEAU VÉHICULE" Click="BtnAjouter_Click"
                    Height="40" Padding="20,0" Background="#2563EB" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <!-- 2. BARRE D'OUTILS (RECHERCHE & FILTRES) -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="10" Margin="0,0,0,15" BorderBrush="#E5E7EB" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Recherche -->
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="200"/>
                    <!-- Filtre Catégorie -->
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="150"/>
                    <!-- Tri -->
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Bouton Reset -->
                </Grid.ColumnDefinitions>

                <!-- Recherche Texte -->
                <Grid Grid.Column="0">
                    <TextBox x:Name="txtRecherche" Height="35" Padding="5" VerticalContentAlignment="Center"
                             TextChanged="TxtRecherche_TextChanged" Background="#F9FAFB" BorderBrush="#D1D5DB"/>
                    <TextBlock Text="🔍 Rechercher (Marque, Modèle, Matricule)..." IsHitTestVisible="False" 
                               Foreground="#9CA3AF" VerticalAlignment="Center" Margin="10,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=txtRecherche}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Filtre Catégorie -->
                <ComboBox x:Name="cbFiltreCategorie" Grid.Column="2" Height="35" 
                          SelectionChanged="CbFiltre_SelectionChanged" DisplayMemberPath="Libelle" SelectedValuePath="Id"
                          Background="#F9FAFB">
                    <!-- Rempli par le code -->
                </ComboBox>

                <!-- Tri -->
                <ComboBox x:Name="cbTri" Grid.Column="4" Height="35" SelectionChanged="CbTri_SelectionChanged">
                    <ComboBoxItem Content="Derniers ajouts" Tag="v.Id DESC" IsSelected="True"/>
                    <ComboBoxItem Content="Prix croissant" Tag="v.PrixParJour ASC"/>
                    <ComboBoxItem Content="Prix décroissant" Tag="v.PrixParJour DESC"/>
                    <ComboBoxItem Content="KM croissant" Tag="v.KilometrageActuel ASC"/>
                    <ComboBoxItem Content="KM décroissant" Tag="v.KilometrageActuel DESC"/>
                </ComboBox>

                <!-- Reset -->
                <Button Grid.Column="6" Content="↺ Réinitialiser" Click="BtnReset_Click" 
                        Padding="10,0" Height="35" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Foreground="#4B5563"/>
            </Grid>
        </Border>

        <!-- 3. LISTE DES VOITURES -->
        <DataGrid Grid.Row="2" x:Name="MyDataGrid" 
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  Background="White" BorderBrush="#E5E7EB" BorderThickness="1" RowHeight="45">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#F9FAFB"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Matricule" Binding="{Binding Matricule}" Width="100" FontWeight="SemiBold"/>
                <DataGridTextColumn Header="Véhicule" Binding="{Binding Marque}" Width="*"/>
                <DataGridTextColumn Header="Modèle" Binding="{Binding Modele}" Width="*"/>
                <DataGridTextColumn Header="Catégorie" Binding="{Binding Categorie}" Width="*"/>

                <DataGridTextColumn Header="Prix/J" Binding="{Binding PrixParJour, StringFormat={}{0:N2} DH}" Width="100" FontWeight="Bold" Foreground="#059669"/>

                <DataGridTextColumn Header="KM Actuel" 
                                    Binding="{Binding KilometrageActuel, StringFormat={}{0:N0} km}" 
                                    Width="120" FontWeight="Bold">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="{Binding CouleurAlerte}"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Dernier Entretien" Binding="{Binding KmDernierEntretien, StringFormat={}{0:N0} km}" Width="120"/>
                <DataGridTextColumn Header="Prochain" Binding="{Binding NomProchainEntretien}" Width="120" FontStyle="Italic"/>
                <DataGridCheckBoxColumn Header="Dispo." Binding="{Binding EstDisponible}" Width="60"/>

                <DataGridTemplateColumn Header="Actions" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="✏️" Click="BtnModifier_Click" Background="#DBEAFE" Foreground="#1E40AF" BorderThickness="0" Padding="8,5" Margin="0,0,5,0" Cursor="Hand" Tag="{Binding Id}"/>
                                <Button Content="🗑️" Click="BtnSupprimer_Click" Background="#FEE2E2" Foreground="#DC2626" BorderThickness="0" Padding="8,5" Cursor="Hand" Tag="{Binding Id}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 4. PAGINATION -->
        <Border Grid.Row="3" Background="White" CornerRadius="0,0,8,8" Padding="10" BorderBrush="#E5E7EB" BorderThickness="1,0,1,1" Margin="0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="lblPaginationInfo" Text="Page 1 sur 1" VerticalAlignment="Center" Margin="0,0,20,0" Foreground="Gray"/>

                    <Button x:Name="btnPrev" Content="Précédent" Click="BtnPrev_Click" 
                            Width="100" Height="30" Margin="0,0,10,0" Cursor="Hand"
                            Background="White" BorderBrush="#D1D5DB" BorderThickness="1"/>

                    <Button x:Name="btnNext" Content="Suivant" Click="BtnNext_Click" 
                            Width="100" Height="30" Cursor="Hand"
                            Background="White" BorderBrush="#D1D5DB" BorderThickness="1"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>